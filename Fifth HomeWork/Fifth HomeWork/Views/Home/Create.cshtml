@model Fifth_HomeWork.Models.Staging
@{
    ViewBag.Title = "Adding staging";
}
<form asp-action="create" asp-controller="home">
    <div class="form-group">
        <label asp-for="Name" class="control-label">Name</label>
        <input type="text" asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Type" class="control-label">Type staging</label>
        <input type="text" asp-for="Type" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Tickets" class="control-label">Quantity tickets</label>
        <input type="number" asp-for="Tickets" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Price" class="control-label">Price</label>
        <input type="number" asp-for="Price" class="form-control" />
    </div>    
    <div class="form-group">
        <input type="submit" value="Add" class="btn btn-default" />
    </div>
</form>