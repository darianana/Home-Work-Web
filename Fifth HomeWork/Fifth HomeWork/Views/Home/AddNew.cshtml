<form method="post" class="form-horizontal" role="form">
    <p>To add new item fill all fields</p>
    <div class="form-group">
        <label for="Name" class="col-md-2 control-label">Name stagings:</label>
        <div class="col-md-4">
            <input type="text" name="Name" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <label for="Country" class="col-md-2 control-label">Type:</label>
        <div class="col-md-4">
            <input type="text" name="Type" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <label for="Tickets" class="col-md-2 control-label">Quantity Tickets:</label>
        <div class="col-md-4">
            <input type="number" name="Tickets" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <label for="Price" class="col-md-2 control-label">Price:</label>
        <div class="col-md-4">
            <input type="number" name="Price" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            @using (Html.BeginForm("AddNew", null, FormMethod.Post))
            {
                <form action="~/Home/Index">
                    <input type="submit" value="Add" class="btn btn-outline-dark"/>
                </form>
            }
        </div>
    </div>
</form>