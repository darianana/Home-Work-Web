@model IEnumerable<Fourth_Home_Work.Models.Director>
<h2></h2>
 
<form method="post" class="form-horizontal" role="form">
    <p>To edit item change data in the fields</p>
    <div class="form-group">
        <label for="Name" class="col-md-2 control-label">Name:</label>
        <div class="col-md-4">
            <input type="text" name="Name" value="@ViewBag.Director.Name" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <label for="Type" class="col-md-2 control-label">Type:</label>
        <div class="col-md-4">
            <input type="text" name="Country" value="@ViewBag.Director.Type" class="form-control" />
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            @using (Html.BeginForm("EditDirector", null, FormMethod.Post))
            {
                <form action="~/Home/Index1">
                    <input type="submit" value="Save changes" />
                </form>
            }
        </div>
        <div class="col-md-offset-2 col-md-10">
            <form action="~/Home/Index1">
                <input type="submit" value="Cancel" />
                </form>
        </div>
    </div>
</form>