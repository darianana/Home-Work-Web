@model IEnumerable<TicketsStore.Models.Staging>
<h2></h2>
 
<form method="post" class="form-horizontal" role="form">
    <p>To edit item change data in the fields</p>

    <div class="form-group">
        <label for="Name" class="col-md-2 control-label">Name:</label>
        <div class="col-md-4">
            <input type="text" name="Name" value="@ViewBag.Staging.Name" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <label for="StartTime" class="col-md-2 control-label">Date:</label>
        <div class="col-md-4">
            <input type="text" name="StartTime" value="@ViewBag.Staging.StartTime" class="form-control" />
        </div>
    </div>    
    <div class="form-group">
        <label for="Price" class="col-md-2 control-label">Price:</label>
        <div class="col-md-4">
            <input type="number" name="Price" value="@ViewBag.Staging.Price" class="form-control" />
        </div>
    </div>
    
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            @using (Html.BeginForm("EditStaging", null, FormMethod.Post))
            {
                <form action="~/Staging/SimpleView">
                    <input type="submit" value="Save changes" />
                </form>
            }
        </div>
        <div class="col-md-offset-2 col-md-10">
            <form action="~/Staging/SimpleView">
                <input type="submit" value="Cancel" />
                </form>
        </div>
    </div>
</form>